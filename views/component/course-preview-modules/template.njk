<ul class="list">
    {% for module in modules %}
        <li class="list-item">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h3 class="govuk-heading-s">{{ module.title }} test</p>

                    <p class="govuk-body">{{ module.description }}</p>
                </div>
                <div class="govuk-grid-column-one-third">
                    <p class="govuk-body">{{ module.type }}</p>
                    <p class="govuk-body">{{ module.duration }}</p>
                </div>
            </div>
        </li>
    {% endfor %}
</ul>


        

