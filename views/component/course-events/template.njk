{% if faceToFaceModules.length > 0 %}
    <p class="govuk-body">Only modules which allow events are shown below.</p>
{% else %}
    <p class="govuk-body">No modules which allow events are part of the course.</p>
{% endif %}

{% for module in faceToFaceModules %}
    <p class="govuk-!-font-weight-bold govuk-body">{{ module.title | default(course.title, true) }}</p>
    {# TODO: style the anchor element  #}
    <a href="/content-management/courses/{{  course.id }}/modules/{{ module.id }}/events/">Add new event</a>
    {% if module.events.length > 0 %}
        {% for event in module.events %}
            {# TODO: not sure how to display events, so for now just showing the venue location #}
            <p class="govuk-body">{{ event.venue.location }}</p>
        {% endfor %}
    {% else %}
        <p class="govuk-body">This module does not yet have any associated events.</p>
    {% endif %}
{% endfor %}
