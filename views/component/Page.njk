{% from "skip-link/macro.njk" import govukSkipLink %}
{% from "header/macro.njk" import govukHeader %}
{% from "footer/macro.njk" import govukFooter %}
{% from "./phaseBanner/macro.njk" import phaseBanner %}
{% from "./backLink/macro.njk" import backLink %}
{% from "./errorSummary/macro.njk" import errorSummary with context %}
{% from "./nav/macro.njk" import nav %}

{% extends "template.njk" %}

{% set htmlClasses = "app-html-class" %}
{% set htmlLang = "en" %}
{% set bodyClasses = "app-body-class" %}

{% block pageTitle %}GOV.UK{% endblock %}

{% block headIcons %}
    {{ super() }}
{% endblock %}

{% block head %}
    <meta name="theme-color" content="0b0c0c" />
  <!--[if !IE 8]><!-->
    <link href="/styles/main.css?v=" rel="stylesheet" />
  <!--<![endif]-->

  {# For Internet Explorer 8, you need to compile specific stylesheet #}
  {# see https://github.com/alphagov/govuk-frontend/blob/master/docs/installation/supporting-internet-explorer-8.md #}
  <!--[if IE 8]>
    <link href="/govuk-frontend/all-ie8.css" rel="stylesheet" />
  <![endif]-->

  {# For older browsers to allow them to recognise HTML5 elements such as `<header>` #}
  <!--[if lt IE 9]>
    <script src="/html5-shiv/html5shiv.js"></script>
  <![endif]-->

  <link rel="shortcut icon" href="/assets/images/favicon.ico" type="image/x-icon" />
  <link rel="icon" href="/assets/images/favicon.ico" type="image/x-icon" />
  {% endblock %}

{% block bodyStart %}
{% endblock %}

{% block skipLink %}
  {{ govukSkipLink({
    href: "#main-content",
    text: "Skip to main content"
  }) }}
{% endblock %}

{% block header %}
  {{ govukHeader({
        homepageUrl: lpgUiUrl + "/",
        containerClasses: "govuk-width-container",
        serviceName: "Civil Service Learning",
        serviceUrl: lpgUiUrl + "/"
    }) }}
{% endblock %}

{% set mainClasses = "app-main-class" %}

{% block beforeContent %}
  {% if banner === true %}
    {% block phaseBanner %}
      {{ phaseBanner("beta") }}
    {% endblock%}
  {% endif %}
  {% block nav %}
    {{ nav(lpgUiUrl) }}
  {% endblock %}
  {% if backButton %}  
    {% block backLink %}
      {{ backLink(backButton) }}
    {% endblock%}
  {% endif %}
{% endblock %}

{% block content %}

{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "#1",
          text: "Help"
        },
        {
          href: lpgUiUrl + "/cookies",
          text: "Cookies"
        },
        {
          href: "mailto:feedback@cslearning.gov.uk",
          text: "Contact"
        },
        {
          href: "#4",
          text: "Terms and conditions"
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  <script src="/govuk-frontend/all.js"></script>
  <script>window.GOVUKFrontend.initAll()</script>
  <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>

{% endblock %}
